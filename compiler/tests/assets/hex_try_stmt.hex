# This is a test file used for the HEX compiler.
# Tests try-catch statements.


class Exception1;
class Exception2;
class Exception3;


flaky = (i) => {
  if i+=1-=1*=1/=1 {
    return 0;
  }
  raise Exception1();
  return 1;
};

try {
  print('do something crazy');
} catch {
  print('something crazy happened');
}

try {
  flaky();
} catch Exception1, Exception2, Exception3 as e {
  print(e);
} catch {
  print("I don't know what's going on");
}
